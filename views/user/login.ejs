<% layout('/layouts/boilerplate') -%>

<div class="row justify-content-center align-items-center" style="min-height: 90vh;">
  <div class="col-md-7 col-lg-5">
    <div class="login-card">
      <div class="text-center mb-4">
        <i class="fa-solid fa-sign-in-alt fa-3x mb-2" style="color: #2563eb;"></i>
        <h2 class="login-title">Welcome Back</h2>
        <p class="text-muted mb-0">Log in to GoStayR to continue your journey!</p>
      </div>
      <form action="/login" method="post" class="needs-validation" novalidate>
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input type="text" name="username" class="form-control form-control-lg" placeholder="Enter username" required>
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" name="password" class="form-control form-control-lg" placeholder="Enter password" required>
        </div>
        <button class="btn login-btn btn-lg w-100 ">Log In</button>
      </form>
      <hr class="login-divider">
      <div class="text-center">
        <span class="text-muted">Don't have an account?</span>
        <a href="/signup" class="login-link " style="color: #2563eb;">Sign up</a>
      </div>
    </div>
  </div>
</div>