<% layout('/layouts/boilerplate') -%>

<div class="row justify-content-center align-items-center " style="min-height: 80vh;">
  <div class="col-md-6 col-lg-5">
    <div class="card shadow-lg p-4 border-0 rounded-4" style="margin-top: 10px; margin-bottom: 10px;">
      <div class="text-center mb-4">
        <i class="fa-solid fa-user-plus fa-3x mb-2" style="color:#2563eb;"></i>
        <h2 class="fw-bold" style="letter-spacing: 1px;">Create Your Account</h2>
        <p class="text-muted mb-0">Join GoStayR and start your journey!</p>
      </div>
      <form action="/signup" method="post" class="needs-validation" novalidate>
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input type="text" name="username" class="form-control form-control-lg" placeholder="Enter username" required>
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" name="email" class="form-control form-control-lg" placeholder="Enter email" required>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" name="password" class="form-control form-control-lg" placeholder="Enter password" required>
        </div>
        <button class="btn btn-lg w-100 text-white" style="background-color: #2563eb;">Sign Up</button>
      </form>
      <div class="text-center mt-3">
        <span class="text-muted">Already have an account?</span>
        <a href="/login" class="fw-bold" style="color: #2563eb;">Log in</a>
      </div>
    </div>
  </div>
</div>